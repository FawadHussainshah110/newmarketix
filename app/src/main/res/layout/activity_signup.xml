<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.signup.SignupActivity">

    <data>

        <import type="android.view.View" />

        <import type="com.example.marketix.util.Constants" />

        <variable
            name="viewModel"
            type="com.example.marketix.presentation.signup.SignupViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:background="@drawable/back_color"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_24sdp"
            android:paddingEnd="@dimen/_24sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView

                android:id="@+id/textView2"
                fontPath="fonts/NexaBold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginBottom="3dp"
                android:text="@string/text_signup"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_welcome"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_welcome"
                fontPath="fonts/NexaBold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_67sdp"
                android:layout_marginBottom="8dp"
                android:text="Join us to start your trading journey!"
                android:textColor="#CDD5DF"

                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toTopOf="@+id/main_scroll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ScrollView
                android:id="@+id/main_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_register_now"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_welcome">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_8sdp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_phone_number"
                    app:layout_constraintTop_toTopOf="@+id/tv_phone_number">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="@dimen/_2sdp"
                        android:text="Full Name"
                        android:textColor="#CDD5DF"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@id/et_name"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_light_rounded_bg"
                        android:hint="@string/full_name"
                        android:inputType="textAutoComplete"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_28sdp"
                        android:text="@={viewModel.name}"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/gray_light_hint_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_name" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:text="@string/text_email"
                        android:textColor="#CDD5DF"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@id/et_email"
                        app:layout_constraintTop_toBottomOf="@id/et_name" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_light_rounded_bg"
                        android:hint="@string/hint_enter_email_address"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_28sdp"
                        android:text="@={viewModel.email}"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/gray_light_hint_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_email" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:text="@string/text_address"
                        android:textColor="#CDD5DF"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@id/et_address"
                        app:layout_constraintTop_toBottomOf="@id/et_email" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_light_rounded_bg"
                        android:hint="@string/address"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_28sdp"
                        android:text="@={viewModel.address}"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/gray_light_hint_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_address" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:text="@string/text_phone_number"
                        android:textColor="#CDD5DF"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@id/et_phone_number"
                        app:layout_constraintTop_toBottomOf="@id/et_address" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_light_rounded_bg"
                        android:hint="@string/text_phone_number"
                        android:inputType="phone"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_28sdp"
                        android:text="@={viewModel.phone}"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/gray_light_hint_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_phone_number" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:text="@string/text_password"
                        android:textColor="#CDD5DF"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@id/et_phone_number"
                        app:layout_constraintTop_toBottomOf="@id/et_phone_number" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_light_rounded_bg"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_28sdp"
                        android:text="@={viewModel.password}"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/gray_light_hint_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_password" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_confirm_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:text="@string/text_confirm_password"
                        android:textColor="#CDD5DF"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="@id/et_confirm_password"
                        app:layout_constraintTop_toBottomOf="@id/et_password" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edit_light_rounded_bg"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_28sdp"
                        android:text="@={viewModel.confirmPassword}"
                        android:textColor="@color/whiteColor"
                        android:textColorHint="@color/gray_light_hint_color"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_confirm_password" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_register_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_rounded_gradient_bg"
                android:drawableTint="@color/colorOrange"
                android:gravity="center"
                android:onClick="@{()->viewModel.registerNowClick()}"
                android:text="@string/register_now"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_password1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_scroll" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_password1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="24dp"
                android:paddingStart="@dimen/_2sdp"

                android:text="Already have an account?"
                android:textColor="#CDD5DF"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_register_now"
                app:layout_constraintStart_toStartOf="@+id/tv_register_now"
                app:layout_constraintTop_toBottomOf="@+id/tv_register_now" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{()->viewModel.loginActivity()}"
                android:paddingStart="@dimen/_2sdp"


                android:text="LogIn"
                android:textColor="#88CBE5"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_password1"
                app:layout_constraintStart_toEndOf="@+id/tv_password1"
                app:layout_constraintTop_toTopOf="@+id/tv_password1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include xmlns:bind="http://schemas.android.com/apk/res-auto"
            android:id="@+id/llProgressBar"
            layout="@layout/loading_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            bind:progressViewModel="@{((com.example.marketix.di.builder.BaseViewModel) viewModel)}" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>